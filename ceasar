function encrypted_message = caesar_cipher(message, shift)
    % Ensure the shift is within the range of 1 to 25
    if shift < 1 || shift > 25
        error('Shift value must be between 1 and 25.');
    end
    
    % Convert the message to ASCII values
    ascii_values = double(message);
    
    % Initialize the encrypted message
    encrypted_message = '';
    
    % Encrypt the message using the Caesar cipher
    for i = 1:length(ascii_values)
        % Check if the character is a lowercase letter
        if ascii_values(i) >= double('a') && ascii_values(i) <= double('z')
            % Perform the shift
            new_char = mod(ascii_values(i) - double('a') + shift, 26) + double('a');
            encrypted_message = [encrypted_message, char(new_char)];
        else
            % If not a lowercase letter, keep the character unchanged
            encrypted_message = [encrypted_message, message(i)];
        end
    end
end
